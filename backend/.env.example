# FinMentor AI Environment Variables
# Copy this file to .env and fill in your API keys

# Core AI Models (Choose one or more)
OPENAI_API_KEY=your_openai_api_key_here  # Optional
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Optional
GOOGLE_API_KEY=your_gemini_api_key_here  # For Gemini AI (different from search API)
GEMINI_API_KEY=your_gemini_api_key_here  # Alternative name for Gemini

# Search APIs (At least one recommended)
# Google Custom Search
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# Alternative Search APIs
SERPAPI_API_KEY=your_serpapi_key_here  # Optional
BING_SUBSCRIPTION_KEY=your_bing_key_here  # Optional

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here  # Free tier available
NEWS_API_KEY=your_newsapi_key_here  # Free tier available
FMP_API_KEY=your_financial_modeling_prep_key_here  # Optional

# Database
DATABASE_URL=postgresql://user:password@localhost/finmentor
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_here

# App Configuration
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Rate Limits
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=2000

# Free API Options (No keys needed)
# - Yahoo Finance (yfinance) - Stock data
# - DuckDuckGo Search - Web search fallback
# - Federal Reserve Economic Data (FRED) - Economic indicators